{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Courses",
            "description": "Course",
            "type": "object",
            "properties": {
                "name": {
                    "description": "Name of the course",
                    "type": "string"
                },
                "type": {
                    "description": "Type of course",
                    "type": "string"
                },
                "program": {
                    "description": "Sequence of topics",
